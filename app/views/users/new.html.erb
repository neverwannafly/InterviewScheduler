<div class="container header">
  <h1 class="display-3">Interview Scheduler</h1>
</div>

<div class="container form-wrapper">
  <%= render partial: 'shared/notice', locals: {notice:notice, color: :red} %>
  <%= form_with(model: @user, local: true, url: signup_path) do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :username %>
      <%= form.text_field :username, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, class: "form-control" %>
    </div>

    <div class="hidden">
      <%= form.label :role_id %>
      <%= form.text_field :role_id, class: "form-control", value: "1" %>
    </div>

    <div class="hidden">
      <%= form.label :role_token %>
      <%= form.text_field :role_token, class: "form-control", value: "0xffffffffff" %>
    </div>

    <div class="actions">
      <%= form.submit "Signup", class: "btn btn-primary btn-block" %>
    </div>

    <div class="link-switch">
      <%= link_to "Already have an account? Click here to login!", login_path, class: "btn btn-outline-dark btn-block" %>
    </div>
  <% end %>
</div>