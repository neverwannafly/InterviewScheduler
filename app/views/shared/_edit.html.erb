<%= form_with(model: interview, url: user_interviews_path, method: :put, local: true, id: "edit_interview") do |form| %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :agenda %>
    <%= form.text_field :agenda, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :members %>
    <%= form.text_field :members, class: "form-control", id:"find-users", value: @members, disabled: true %>
  </div>

  <div class="form-group">
    <%= form.label :start %>
    <%= form.datetime_field :start, class: "form-control", id: "dtp_beg" %>
  </div>

  <div class="form-group">
    <%= form.label :end %>
    <%= form.datetime_field :end, class: "form-control", id: "dtp_end" %>
  </div>

  <div class="form-group">
    <%= form.label :comments %>
    <%= form.text_area :comments, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Update", class: "btn btn-primary btn-block" %>
  </div>

<% end %>