<div class="post">
  <div class="post-head">
    <div class="name">
      <%= post.user.username %>
    </div>
  </div>
  <div class="image center-block">
    <%= link_to image_tag(post.image, :class => "img-responsive"), post_path(post) %>
  </div>
  <p class="caption">
    <%= post.caption %>
  </p>
</div>